<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AnimationActivity" parent="@android:style/Theme.Light.NoTitleBar">
        　　<item name="android:activityOpenExitAnimation">@anim/anim_enter</item>
        　　<item name="android:activityOpenEnterAnimation">@anim/anim_exit</item>
        　　<item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        　　<item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colortransparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>